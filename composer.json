{
  "name": "vendor_name/animals-cli",
  "description": "CLI application that accepts animal information and outputs their sound",
  "license": "proprietary",
  "authors": [
    {
      "name": "Benjamin Wetmore",
      "email": "bfwetmore@gmail.com"
    }
  ],
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-unit": "vendor/bin/phpunit --testsuite unit",
    "test-integration": "vendor/bin/phpunit --testsuite integration"
  },
  "autoload": {
    "psr-4": {
      "src\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "extra": {
    "phpunit": {
      "testsuite": {
        "unit": "tests/Unit",
        "integration": "tests/Integration"
      }
    }
  }
}
